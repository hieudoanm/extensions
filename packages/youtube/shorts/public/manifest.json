{
  "manifest_version": 2,
  "name": "YouTube Shorts Blocker",
  "version": "1.0",
  "description": "Block YouTube Shorts",
  "permissions": ["tabs", "*://www.youtube.com/*"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Get Transcript"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
