{
  "manifest_version": 2,
  "name": "YouTube Transcript Getter",
  "version": "1.0",
  "description": "Fetch transcript of current YouTube video",
  "permissions": ["tabs", "*://www.youtube.com/*"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Get Transcript"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/watch*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
